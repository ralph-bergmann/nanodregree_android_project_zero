<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TextAppearances -->

    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance"/>


    <!-- TextAppearances TradeGothicNo20CondBold Saffron -->

    <style name="AppTheme.TextAppearance.Saffron">
        <item name="android:textColor">@color/saffron</item>
    </style>

    <style name="AppTheme.TextAppearance.Saffron.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Saffron.Bold.16sp">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
